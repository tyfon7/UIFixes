<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net471</TargetFramework>
    <AssemblyName>Tyfon.UIFixes.Net</AssemblyName>
    <Version>3.0.2</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <PathToSPT>d:\fika</PathToSPT>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Fika.Core">
      <HintPath>$(PathToSPT)\BepInEx\plugins\Fika.Core.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec
      Command='if $(ConfigurationName) == Debug (
        xcopy /F /Y "$(TargetPath)" "d:\fika\BepInEx\plugins\"
        xcopy /F /Y "$(ProjectDir)$(OutDir)$(TargetName).pdb" "d:\fika\BepInEx\plugins\"
        xcopy /F /Y "$(TargetPath)" "d:\fika2\BepInEx\plugins\"
        xcopy /F /Y "$(ProjectDir)$(OutDir)$(TargetName).pdb" "d:\fika2\BepInEx\plugins\"
      )
      if $(ConfigurationName) == Release (
        mkdir "$(ProjectDir)dist\BepInEx\plugins"
        xcopy /F /Y "$(TargetPath)" "$(ProjectDir)dist\BepInEx\plugins\"
        xcopy /F /Y /S "$(ProjectDir)dist\BepInEx" "$(ProjectDir)$(PathToSPT)\BepInEx"
        xcopy /F /Y /S "$(ProjectDir)dist\user" "$(ProjectDir)$(PathToSPT)\user"
      )' />
  </Target>
</Project>